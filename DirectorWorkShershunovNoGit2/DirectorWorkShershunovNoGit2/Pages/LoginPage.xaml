<Page x:Class="DirectorWorkShershunovNoGit2.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DirectorWorkShershunovNoGit2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <StackPanel>
                <TextBlock Text="Логин" Foreground="Black"/>
                <TextBox x:Name="TBLogin" Foreground="Black"/>
                <TextBlock Text="Пароль"/>
                <TextBox x:Name="TBPassword"/>
                <Button x:Name="BLogin"
                    Content="Войти"
                    Click="BLogin_Click"/>
            <Button x:Name="BReg" Content="Зарегистрироваться" Click="BReg_Click"/>
        </StackPanel>
    </Grid>
</Page>
